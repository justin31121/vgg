{
	"manifest_version": 2,
	"name": "Vgg Bilderkennung",
	"version": "1.0.0",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_script.js"]
		}
	],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+Q"
			}
		}
	},

	"background": {
		"scripts": ["content_script.js"]
	},


	"browser_action": {
		"browser_style": true,
		"default_title": "VGG",
		"default_popup": "popup.html"
	},

	"permissions": [
		"storage",
		"http://localhost/*",
		"activeTab"
	]
}